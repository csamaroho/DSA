class Solution {
    public int longestSemiRepetitiveSubstring(String s) {
        if(s.length()==1) return 1;
        int ans=0;
        int l=0;
        int r=1;
        int lastdup=0;
        while(r<s.length())
        {
            if(s.charAt(r)==s.charAt(r-1))
            {
                if(lastdup>0)
                    l=lastdup;
                lastdup=r;
            }
            ans=Math.max(ans,r-l+1);
            r++;
        }
        
        return ans;
    }
}
